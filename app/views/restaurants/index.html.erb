<h1>Restaurants</h1>

<%# add the controller to the element that wraps both of them up %>
<ul>
  <% @restaurants.each do |restaurant| %>
    <li>
      <%= link_to restaurant.name, restaurant_path(restaurant) %> | 
      <%= link_to 'delete', 
                  restaurant_path(restaurant), 
                  method: :delete,
                  remote: :true %>
    </li>
  <% end %>
</ul>
